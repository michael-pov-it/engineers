<!DOCTYPE html>
<html lang="{{ lang }}">
<head>
  <meta charset="utf-8" />
  <title>{{ page_title }}</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="language">
    <a href="/en" class="btn secondary">EN</a>
    <a href="/sk" class="btn secondary">SK</a>
  </div>

  <header class="hero">
    <h1>{{ hero_h1 }}</h1>
    <p class="tagline">{{ hero_tagline }}</p>
    <a href="#offer" class="btn primary">{{ see_offer }}</a>
  </header>

  <!-- CALL-TO-ACTION SECTION -->
  <section class="cta">
    <div class="container">
      <h2>{{ cta_h2 }}</h2>
      <a href="#kontakt" class="btn secondary">{{ contact_us }}</a>
    </div>
  </section>

  <!-- FOOTER -->
  <footer class="footer" id="kontakt">
    <div class="container">
      <p>
        Â© <span id="year"></span> {{ copyright_text }}
      </p>
      <p>
        E-mail:
        <a href="mailto:hello@engineers-incubator.com">
          {{ hello_email }}
        </a>
      </p>
    </div>
  </footer>

  <!-- Keeps copyright year up to date -->
  <script>
    document.getElementById("year").textContent = new Date().getFullYear();
  </script>

</body>
</html>
